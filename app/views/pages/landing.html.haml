.maincontent-area
  .zigzag-bottom
  .container
    .row
      .col-md-12
        .latest-product
          %h2.section-title Latest stores
          .product-carousel
            - @latest_stores.each do |store|
              .single-product
                .product-f-image
                  - if store.pictures.any?
                    = image_tag attachment_url(store.pictures.first, :image), size: "200x200"
                  - else
                    = image_tag "default-store-image.jpg", size: "200x200"
                  .product-hover
                    = link_to store, class: "view-details-link" do
                      %i.fa.fa-link
                      See details
                %h2
                  = link_to store.name, store

/ End main content area
.brands-area
  .zigzag-bottom
  .container
