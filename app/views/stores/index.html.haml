.page-header
  = link_to new_store_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Store
  = link_to lucky_stores_path, class: 'btn btn-info' do
    Feeling Lucky?

- if @stores.empty?
  .jumbotron
    %h1 No Results Found
- else
  .table-responsive
    %h1 Store stores
  %table.table.table-striped.table-bordered.table-hover
    %thead
    %thead
      %tr
        %th Name
        %th Address
        %th Phone
        %th Website
        %th Hours
        %th Price
        %th Cuisine
        %th Menu
        %th{colspan: 3} Show/Edit/Delete

    %tbody
      - @stores.each do |store|
        %tr
          %td= store.name
          %td= store.address
          %td= store.phone
          %td= store.website
          %td= store.hours
          %td= price_as_dollar_signs(store.price)
          %td= store.cuisine
          %td= store.menu_id
          %td
            = link_to store do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_store_path(store) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to store, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
