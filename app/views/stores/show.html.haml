.page-header
  = link_to stores_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_store_path(@store), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show store

%dl.dl-horizontal
  %dt Name:
  %dd= @store.name
  %dt Address:
  %dd= @store.address
  %dt Phone:
  %dd= @store.phone
  %dt Website:
  %dd= @store.website
  %dt Hours:
  %dd= @store.hours
  %dt Price:
  %dd= price_as_dollar_signs(@store.price)
  %dt Cuisine:
  %dd= @store.cuisine
  %dt Menu:
  %dd= @store.menu_id
